<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EDUMATEAndroidAppClient" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
<!--        <item name="colorPrimary">@color/background_white</item>-->
<!--        <item name="colorPrimaryVariant">@color/background_white</item>-->
<!--        <item name="android:navigationBarColor">@color/white</item>-->
<!--        <item name="android:windowLightNavigationBar">true</item>-->
        <item name="android:statusBarColor">@color/background_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.EDUMATEAndroidAppClient" parent="Base.Theme.EDUMATEAndroidAppClient" />
    
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_blue</item>
        <item name="android:statusBarColor">@color/background_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="CustomFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/background_white</item>
        <item name="strokeColor">@color/lighter_blue</item>
        <item name="strokeWidth">50dp</item>
        <item name="shapeAppearanceOverlay">@style/FABRoundShape</item>
        <item name="android:statusBarColor">@color/background_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="FABRoundShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:statusBarColor">@color/background_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BottomNavTextStyle" parent="">
        <item name="android:textSize">10sp</item> <!-- Giảm kích thước chữ -->
        <item name="android:statusBarColor">@color/background_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="BottomNavIconStyle" parent="">
        <item name="android:layout_width">20dp</item> <!-- Giảm icon -->
        <item name="android:layout_height">20dp</item>
        <item name="android:statusBarColor">@color/background_white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>